<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ArticleListItem"
    app:cardUseCompatPadding="true"
    android:background="?selectableItemBackground">


    <LinearLayout
        android:id="@+id/container"
        style="@style/Fill">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.widget.ImageViewKeepRatio
            android:id="@+id/backdrop"
            app:width_height_ratio="@dimen/image_aspect_ratio"
            style="@style/ArticleListThumbnail" />

        <TextView
            android:id="@+id/article_title"
            style="@style/ArticleListTitle" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/ArticleListSubtitle" />

    </LinearLayout>

</android.support.v7.widget.CardView>
